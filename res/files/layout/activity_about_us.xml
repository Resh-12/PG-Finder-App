<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay_bg"
    tools:context=".Aboutus">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PG FINDER"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="50dp"
        android:textAlignment="center"
        android:textColor="#036C6E"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="#0F9093"
        android:text="The PG Finder application is a revolutionary Android app designed to simplify
the process of finding suitable paying guest accommodations for students and job seekers. With
its user-friendly interface and powerful search features, the app aims to provide a seamless
experience in finding PGs that meet the specific needs and preferences of individuals. By
compare amenities and make informed decisions to secure the perfect living space."
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

</androidx.constraintlayout.widget.ConstraintLayout>