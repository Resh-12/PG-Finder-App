<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5"
    android:paddingBottom="20dp"
    tools:context=".HomeDetails">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/croissant_one"
            android:text="PG DETAILS"
            android:textAlignment="center"
            android:textColor="@color/MainBlue"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/HDhomePic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_home" />

        <RelativeLayout
            android:id="@+id/relativeadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HDhomePic"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:background="@drawable/homedetailbg">

            <TextView
                android:id="@+id/detailadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="5dp"
                android:text="Address Details:"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/detailadd"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Locality:"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/labelcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelloc"
                    android:padding="3dp"
                    android:text="City:"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/detailadd"
                android:orientation="vertical"
                android:layout_marginStart="152dp">
                <TextView
                    android:id="@+id/txtaddloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/txtaddcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeavail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeadd"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:elevation="3dp"
            android:background="@drawable/homedetailbg">
            <TextView
                android:id="@+id/Availfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="5dp"
                android:text="Available For:"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/txtaddgender"
                android:layout_below="@+id/Availfor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="00"
                android:textStyle="bold"
                android:textSize="17sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativepropid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeavail"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:elevation="3dp"
            android:background="@drawable/homedetailbg">
            <TextView
                android:id="@+id/labelpropid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="5dp"
                android:text="PG specification:"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/labelpropid"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Rent:"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Security deposit:"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Sharing type:"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Meals included:"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/labelpropid"
                android:orientation="vertical"
                android:layout_marginStart="160dp">
                <TextView
                    android:id="@+id/txtaddrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Rs."
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/txtadddepo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Rs."
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/txtaddsharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/txtaddmeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeamen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativepropid"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:elevation="3dp"
            android:background="@drawable/homedetailbg">
            <TextView
                android:id="@+id/amentext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="5dp"
                android:text="Amenities:"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/txtaddamenities"
                android:layout_below="@+id/amentext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="00"
                android:textStyle="bold"
                android:maxLines="3"
                android:textSize="17sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativepref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeamen"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:elevation="3dp"
            android:background="@drawable/homedetailbg">
            <TextView
                android:id="@+id/labelpref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="5dp"
                android:text="Preference:"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/labelpref"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Overnight guests allowed:"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Food habits:"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_below="@+id/labelpref"
                android:orientation="vertical"
                android:layout_marginStart="215dp">
                <TextView
                    android:id="@+id/txtaddguests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/txtaddfood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativedesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativepref"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:elevation="3dp"
            android:background="@drawable/homedetailbg">
            <TextView
                android:id="@+id/labeldesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:padding="5dp"
                android:text="Description:"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <TextView
                android:id="@+id/txtadddesc"
                android:layout_below="@+id/labeldesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="00"
                android:textStyle="bold"
                android:textSize="17sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativedesc"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:padding="3dp"
            android:text="Call for enquiry"
            android:textAlignment="center"
            android:textColor="#616060"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btncall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/baseline_phone"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btncall"
            android:layout_marginStart="28dp"
            android:padding="3dp"
            android:text="Confirm booking by paying security deposit"
            android:textAlignment="center"
            android:textColor="#616060"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtt"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/btn_bg"
            android:padding="5dp"
            android:text="Book now"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="italic" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>