<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EEF6F5"
    android:paddingBottom="10dp"
    android:layout_height="match_parent"
    tools:context=".Editpg">
    <ImageView
        android:id="@+id/editPic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_home" />
    <LinearLayout
        android:id="@+id/l"
        android:layout_below="@+id/editPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="30dp"
        android:background="@drawable/layout_bg"
        android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Rent:"
        android:layout_below="@+id/editPic"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textStyle="bold|italic"/>
    <EditText
        android:id="@+id/editrent"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="#494444"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t"
        android:textSize="20dp"
        android:padding="7dp"
        android:textStyle="italic|bold"
        android:elevation="3dp"
        android:background="@drawable/layout"
        android:drawableLeft="@drawable/baseline_currency_rupee_24"/>
        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Security deposit:"
            android:layout_below="@+id/editPic"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold|italic"/>
        <EditText
            android:id="@+id/editsecurity"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="#494444"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t"
            android:textSize="20dp"
            android:padding="7dp"
            android:textStyle="italic|bold"
            android:elevation="3dp"
            android:background="@drawable/layout"
            android:drawableLeft="@drawable/baseline_currency_rupee_24"/>
        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Facilities:"
            android:layout_below="@+id/editPic"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:textStyle="bold|italic"/>
        <EditText
            android:id="@+id/editfacility"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="#494444"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="italic|bold"
            android:elevation="3dp"
            android:maxLines="3"
            android:background="@drawable/layout" />
        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Description"
            android:layout_below="@+id/editPic"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:textStyle="bold|italic"/>
        <EditText
            android:id="@+id/editdescription"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="#494444"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="italic|bold"
            android:elevation="3dp"
            android:maxLines="3"
            android:background="@drawable/layout" />
</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>