<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bookPic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_home"
            android:scaleType="centerCrop"
            android:backgroundTint="#DCD8D8"/>
        <TextView
            android:id="@+id/btxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="10dp"
            android:text="Rent:"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/brent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="245dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/baseline_rupee"
            android:text="0"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/btxt2"
            android:layout_below="@+id/btxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_home_type"
            android:drawablePadding="1dp"
            android:textColorHint="#372A2A"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/btype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="10dp"
            android:text="0"
            android:layout_below="@+id/brent"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/btxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="10dp"
            android:text="Booked on:"
            android:textSize="15sp"
            android:layout_below="@+id/btxt2"/>
        <TextView
            android:id="@+id/bdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="10dp"
            android:text="0"
            android:layout_below="@+id/btype"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/btxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="10dp"
            android:text="Amount paid:"
            android:textSize="15sp"
            android:layout_below="@+id/btxt3"/>
        <TextView
            android:id="@+id/bamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="10dp"
            android:text="0"
            android:layout_below="@+id/bdate"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>