<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPg">

    <RadioGroup
        android:id="@+id/rbmypg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/radiopost"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radiopost"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/pgradio"
            android:button="@color/white"
            android:elevation="20dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Posted Pg"
            android:textSize="23dp"
            android:textStyle="italic|bold" />

        <RadioButton
            android:id="@+id/radiobook"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/pgradio"
            android:button="@color/white"
            android:elevation="20dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Booked Pg"
            android:textSize="23dp"
            android:textStyle="italic|bold" />

    </RadioGroup>


    <LinearLayout
        android:id="@+id/pgdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/rbmypg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>