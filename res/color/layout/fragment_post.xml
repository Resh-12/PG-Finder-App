<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="10dp"
    tools:context=".fragments.PostFrag">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room type :"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/layout">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rgroom"
            android:checkedButton="@id/rbhome">
        <RadioButton
            android:id="@+id/rbhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#00BABE"
            android:text="Home"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#221E1F" />

        <RadioButton
            android:id="@+id/rbapart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#00BABE"
            android:text="Apartment"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


</RadioGroup>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seeking a:"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"/>
    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/layout">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rggender"
            android:checkedButton="@id/male">
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#00BABE"
            android:text="Male"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginStart="80dp"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#221E1F" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#00BABE"
            android:text="Female"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/layout">

        <EditText
            android:id="@+id/mrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:hint="Monthly rent"
            android:textColorHint="#8C8B8B"
            android:drawableLeft="@drawable/baseline_rupee"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#221E1F" />

        <EditText
            android:id="@+id/sdepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:hint="Security deposit"
            android:textColorHint="#8C8B8B"
            android:drawableLeft="@drawable/baseline_rupee"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sharing Type:"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="520dp"/>
    <LinearLayout
        android:layout_marginTop="570dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/layout">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rgshare"
            android:checkedButton="@id/rbnonshare">
        <RadioButton
            android:id="@+id/rbshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#00BABE"
            android:text="Sharing"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <View
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#221E1F" />

        <RadioButton
            android:id="@+id/rbnonshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#00BABE"
            android:text="Non Sharing "
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        </RadioGroup>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meals included:"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="675dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/meals"
            android:layout_height="140dp"
            android:layout_marginTop="720dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/breakfst"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:text="Breakfast"
                    android:textSize="25dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="35dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#221E1F" />

                <CheckBox
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:text="Lunch"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">

                <CheckBox
                    android:id="@+id/dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Dinner"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#221E1F" />

                <CheckBox
                    android:id="@+id/None"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="None"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room includes:"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="875dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/room_fac"
            android:layout_height="wrap_content"
            android:layout_marginTop="915dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/layout">
            <LinearLayout
                android:id="@+id/facility1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Bed"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/Pillow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Pillow"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/Wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Wifi"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/Cupbrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Cupboard"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/Fridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Fridge"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="26dp"
                    android:text="24/7 water supply"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>





            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/facility1">
                <CheckBox
                    android:id="@+id/Laundry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Laundry"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/Stove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Stove"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/Parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Parking"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Study table"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/keeping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="House keeping"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <CheckBox
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="Television"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food habits:"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/room_fac"
            android:layout_marginTop="15dp"
            />

    <LinearLayout
        android:id="@+id/foodpref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/rgfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@id/veg">

            <RadioButton
                android:id="@+id/veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Vegetarian"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/nveg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Non Vegetarian"
                android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>
        <TextView
            android:id="@+id/guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overnight guests allowed:"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/foodpref"
            android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/guests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guest"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/rgguest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/no"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Yes"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="No"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/Occ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="10dp"
                android:text="Occasionally"
                android:textSize="20dp" />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  City:"
        android:layout_below="@+id/guests"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textStyle="bold|italic"/>


    <Spinner
        android:id="@+id/spinnercity"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guests"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="190dp"/>


    <EditText
        android:id="@+id/etloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnercity"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout"
        android:hint="Enter locality"
        android:padding="10dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/etdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etloc"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout"
        android:hint="Description"
        android:padding="10dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/etcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etdesc"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout"
        android:hint="Enter contact no"
        android:padding="10dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
       android:layout_below="@id/etcontact"
        android:text="Add Photo"
        android:textSize="25sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/etcontact"
        android:background="@drawable/baseline_add_photo"
        android:scaleType="fitXY"/>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/post"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="160dp"
    android:layout_below="@+id/homeImage"
    android:layout_marginTop="20dp"
    android:text="Post"
    android:background="@drawable/btn_bg"/>
</RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
