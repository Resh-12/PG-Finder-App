<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFrag"
    android:background="@drawable/accbg">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/p"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


      <LinearLayout
          android:id="@+id/L_t"
          android:layout_width="match_parent"
          android:gravity="center"
          android:layout_marginTop="90dp"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/p"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0">

         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/userprofile"
             android:layout_width="127dp"
             android:layout_height="120dp"
             android:scaleType="centerCrop"
             android:src="@drawable/baseline_person_24"
             app:civ_border_color="@color/MainBlue"
             app:civ_border_width="4dp"
             app:civ_circle_background_color="#E8F2F3"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             tools:ignore="MissingClass" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/L_m"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
         android:layout_marginTop="210dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.223">


         <TextView
             android:id="@+id/umail"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="5dp"
             android:layout_marginEnd="10dp"
             android:layout_marginBottom="10dp"
             android:hint="user123@gmail.com"
             android:textAlignment="center"
             android:textColor="@color/MainBlue"
             android:textColorHint="#00BABE"
             android:textSize="22sp"
             android:textStyle="bold|italic" />


      </LinearLayout>

      <LinearLayout
          android:id="@+id/op"
          android:layout_width="350dp"
          android:layout_height="370dp"
          android:layout_marginTop="20dp"
          android:gravity="center"
          android:orientation="vertical"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.491"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/L_m"
          app:layout_constraintVertical_bias="0.0">

         <TextView
             android:id="@+id/mypg"
             android:layout_width="270dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="10dp"
             android:background="@drawable/text_bg"
             android:drawableLeft="@drawable/baseline_home"
             android:drawableTint="#1191A1"
             android:padding="10dp"
             android:text="   My PG"
             android:textColor="#00babe"
             android:textColorHint="#00babe"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/editprofile"
             android:layout_width="270dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="10dp"
             android:layout_marginTop="30dp"
             android:layout_marginEnd="10dp"
             android:background="@drawable/text_bg"
             android:drawableLeft="@drawable/baseline_edit_24"
             android:drawableTint="#1191A1"
             android:padding="10dp"
             android:text="   Edit Profile "
             android:textColor="#00babe"
             android:textColorHint="#00babe"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/aboutus"
             android:layout_width="270dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="10dp"
             android:layout_marginTop="30dp"
             android:layout_marginEnd="10dp"
             android:background="@drawable/text_bg"
             android:drawableLeft="@drawable/baseline_groups_24"
             android:drawableTint="#1191A1"
             android:padding="10dp"
             android:text="   About Us"
             android:textColor="#00babe"
             android:textColorHint="#00babe"
             android:textSize="20sp" />

         <TextView
             android:id="@+id/logout"
             android:layout_width="270dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="10dp"
             android:layout_marginTop="30dp"
             android:layout_marginEnd="10dp"
             android:background="@drawable/text_bg"
             android:drawableLeft="@drawable/baseline_logout_24"
             android:drawableTint="#1191A1"
             android:padding="10dp"
             android:text="   Log Out"
             android:textAlignment="textStart"
             android:textColor="#00BABE"
             android:textSize="20sp" />

      </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
